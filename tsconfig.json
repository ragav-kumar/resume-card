{
	"compilerOptions": {
		"module": "commonjs",
		"baseUrl": "./",
		"outDir": "build",
		"target": "es6",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"lib": ["es6"],
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
	},
	"include": [
		"**.ts"
	],
	"exclude": [
		"./frontend"
	]
}